{
  "linters": {
    "pep8-py": {
      "type": "pep8",
      "include": "(\\.py$)",
      "exclude": "(^scap/sh.py$)",
      "severity": {
        "E501": "advice"
      }
    },
    "pep8-bin": {
      "type": "pep8",
      "include": "(^bin/.+$)",
      "severity": {
        "E402" : "disabled"
      }
    },
    "pyflakes": {
      "type": "pyflakes",
      "include": "(\\.py$|^bin/.+$)",
      "exclude": "(^setup.py$|^scap/__init__.py$|^scap/sh.py$)"
    },
    "php": {
      "type": "php",
      "include": "(\\.php$)"
    }
  }
}
